<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im1"
           android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#e95151"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/im2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#68d1d1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="3">

        <ImageView
            android:id="@+id/im3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#0a7474"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/im4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#34a925"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/im5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#351374"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="3">

        <ImageView
            android:id="@+id/im6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#68d1d1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/im7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#2d68c6"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/im8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#dc8f3d"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
